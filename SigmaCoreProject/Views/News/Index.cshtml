@model IEnumerable<SigmaCoreProject.Models.News>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TitleNews)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BodyNews)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShoreInfo)
            </th>
            <th>
            </th>
            <th>
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TitleNews)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BodyNews)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShoreInfo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
                <td> <a asp-action="Details" asp-route-id="@item.Id">Details</a> </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
